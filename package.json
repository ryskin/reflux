{
  "name": "reflux",
  "version": "0.1.0",
  "private": true,
  "description": "Self-improving workflow automation platform",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd packages/core && npm run migrate",
    "db:seed": "cd packages/core && npm run seed"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "n8n-nodes-base": "^1.117.0",
    "n8n-workflow": "^1.116.0"
  }
}
